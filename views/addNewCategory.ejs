<%- include('header') %>
<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.7/js/tether.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script src="https://kit.fontawesome.com/619cf0717e.js" crossorigin="anonymous"></script>
</head>

<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card" style="margin-top:50px">
          <div class="card-header alert-success">
            <h3>Add New Password Category</h3>
          </div>
          <div class="card-body">
            <form name="my-form" action="/add-new-category" method="POST">
              <% if(errors!=''){ %>
              <div class="alert alert-danger" role="alert">
                <%= errors.passwordCategory.msg %>
              </div>
              <% } %>
              <% if(success!=''){ %>
              <div class="alert alert-success" role="alert">
                <%= success %>
              </div>
              <% } %>
              <div class="form-group row">
                <div class="col-md-12">
                  <input type="text" id="email_address" class="form-control" placeholder="Enter New Category" name="passwordCategory">
                </div>
              </div>

              <div class="col-md-12">
                <button type="submit" name="submit" value="submit" class="btn btn-block btn-primary">
                  ADD CATEGORY
                </button>
              </div>
              <p class="mt-2"><a href="/passwordCategory">View All Category List</a> </p>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



</body>

</html>